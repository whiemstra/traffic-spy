  gem 'shotgun'
  gem 'minitest'
  gem 'tux'
  gem 'capybara'
  gem 'launchy'
  gem 'rack-test'
  gem 'database_cleaner'
end

group :evaluations do
  # THIS SPACE RESERVED FOR EVALUATIONS
  gem 'cane'
  gem 'reek'
  gem 'rake'
end

group :production do
  gem 'sinatra', require: 'sinatra/base'
  gem 'pg'
  gem 'activerecord'
  gem 'sinatra-activerecord'
  gem 'useragent'
  gem 'pry'
  gem 'simplecov'
  gem 'tilt', '1.3.4'
end
